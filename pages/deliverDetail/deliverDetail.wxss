/* pages/deliverDetail/deliverDetail.wxss */
/* 进度icon-start */
.progress {
  height: 80px;
  padding: 20px 15px;
  border-bottom: 1px solid #e8e8e8;
}

.progress .title {
  margin-bottom: 17px;
  color: #555;
  font-size: 13px;
}

.pro-info {
  position: relative;
  height: 53px;
  z-index: 1;
}

.line,
.pro-desc {
  position: absolute;
  left: 0;
}

.line {
  height: 2px;
  background-color: #00b38a;
  top: 14px;
  width: 75%;
  margin: 0 12.5%;
  z-index: 5;
}

.pro-desc {
  top: 0;
  z-index: 10;
  width: 100%;
  display: flex;
}

.pro-item {
  flex-basis: 25%;
  flex-grow: 1;
}

.circle {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #fff;
  border: 1px solid #dbe4e2;
}

.selected .circle {
  border-color: #00b38a;
}

.check {
  width: 16px;
  height: 16px;
}

.pro-item .text {
  margin-top: 9px;
  color: #dbe4e2;
  font-size: 12px;
  text-align: center;
}

.selected .text {
  color: #00b38a;
}
/* 进度icon-end */
/* 操作记录-start */
.operations {
  margin: 20px 0 0 35px;
  position: relative;
  z-index: 10;
  min-height: 50px;
}

.vline {
  position: absolute;
  left: 5px;
  top: 0;
  z-index: 11;
  width: 1px;
  height: 100%;
  background-color: #e8e8e8;
  border-top: 5px solid #fff;
  border-bottom: 50px solid #fff;/* 当只有一个操作，不显示连线；多个操作则去除最后一条没有连接两端的线 */
  box-sizing: border-box;
}

.ops-item {
  margin: 0 0 20px 20px;
  min-height: 20px;
  border-bottom: 1px solid #e8e8e8;
}

.ops-item .title {
  position: relative;
  color: #333;
  font-size: 14px;
  margin-bottom: 5px;
}

.ops-item .icon-dot {
  position: absolute;
  left: -18px;
  top: 5px;
  z-index: 15;
  height: 7px;
  width: 7px;
  border-radius: 3px;
  background-color: #00b38a;
}

.ops-item .ops-date {
  margin-bottom: 20px;
  color: #888;
  font-size: 10px;
}
/* 操作记录-end */
