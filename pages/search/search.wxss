/* pages/search/search.wxss */
.inputer {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
  height: 45px;
}

.l-button {
  flex-shrink: 0;
  width: 88px;
  height: 45px;
  line-height: 45px;
  font-size: 15px;
  text-align: center;
  border-right: 1px solid #e8e8e8;
}

.arrow-down {
  margin-left: 2px;
  width: 10px;
  height: 10px;
}

.r-input {
  position: relative;
  display: flex;
  flex-grow: 1;
}

.input {
  flex-shrink: 0;
  width: 85%;
  margin-left: 5%;
  padding: 10px 0;
  height: 25px;
  line-height: 25px;
  color: #333;
  font-size: 15px;
}

.icon {
  position:absolute;
  z-index:10;
  top:0;
  right:0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 20%;
  height: 45px;
  line-height: 45px;
}

.icon-search {
  width: 17px;
  height: 17px;
}
