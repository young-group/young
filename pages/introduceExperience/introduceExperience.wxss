.icon {
  position: absolute;
  z-index: 10;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 20%;
  height: 45px;
  line-height: 45px;
}

.weui-cells_after-title {
  margin-bottom: 24rpx;
}

.department-input .weui-label::before, .ongoing .weui-label::before {
  display: none;
}

.weui-label::before {
  content: "*";
  color: #f96868;
  font-size: 30rpx;
  margin-right: 4rpx;
}

.weui-icon-clear {
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  z-index: 999;
}

.weui-cell__ft {
  width: 21px;
  height: 21px;
  overflow: visible;
}

.weui-cell__ft icon {
  vertical-align: top;
}

.ongoing .weui-cell {
  padding-left: 0;
}

.placeholder {
  color: #999;
}

.picker-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.arrow-right {
  margin-right: 10rpx;
}

.save-btn {
  margin-top: 60rpx;
}

.del-btn {
  margin-top: 30rpx;
  background-color: #d64949 !important;
  margin-bottom: 60rpx;
}

.cue {
  font-size: 22rpx;
  color: #ff19fc;
  text-align: center;
  margin-top: 42rpx;
  margin-bottom: 70rpx;
}

@keyframes myfirst {
  from {
    transform: translate(-50%, -100%);
  }

  50% {
    transform: translate(-50%, 10%);
  }

  to {
    transform: translate(-50%, -100%);
  }
}

@-webkit-keyframes myfirst {
  from {
    transform: translate(-50%, -100%);
  }

  50% {
    transform: translate(-50%, 10%);
  }

  to {
    transform: translate(-50%, -100%);
  }
}

